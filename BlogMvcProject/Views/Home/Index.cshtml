@model IEnumerable<BlogMvcApp.Models.BlogModel>

@{
    ViewData["Title"] = "Home Page";
}
<h2>Blog List</h2>

<div class="row">
    
        @foreach (var blog in Model)
        {
            <div class="blogitem">
                <h3 class="page-header">
                    @blog.Title
                </h3>
                <p>
                    <span class="glyphicon glyphicon-time"></span>
                    @blog.AddingDate
                </p>
                <hr />
                <img class="img-responsive" src="http://placehold.it/800x300" alt=" " />
                <hr />
                <p>
                    @blog.Description
                </p>
                @Html.ActionLink("More...","Details","Blog",new{id=@blog.BlogId},new {@class="btn btn-primary"})
            </div>
        }
  
@section RightColon
{
        @using (Html.BeginForm("List","Category",FormMethod.Get))
        {
            <div class="well">
                <h4>Blog Search</h4>
                <hr />
                <div class="input-group">
                    @Html.TextBox("Q",null,new {@class="form-control"})
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            
                        </button>
                    </span>
                </div>
            </div>
        }

        <hr/>

        @await Component.InvokeAsync("CategoryList")
}
       
</div>



