@model IEnumerable<BlogMvcApp.Models.BlogModel>

@{
    ViewData["Title"] = "Home Page";
}
<h2>Blog List</h2>

<div class="row">
    <div class="col-md-8">
        @foreach (var blog in Model)
        {
            <div class="blogitem">
                <h3 class="page-header">
                    @blog.Title
                </h3>
                <p>
                    <span class="glyphicon glyphicon-time"></span>
                    @blog.AddingDate
                </p>
                <hr />
                <img class="img-responsive" src="htt://placehold.it/900x300" alt=" " />
                <hr />
                <p>
                    @blog.Description
                </p>
                @Html.ActionLink("More...","Details","Blog",new{id=@blog.BlogId},new {@class="btn btn-primary"})
            </div>
        }
    </div>
    <div class="col-md-4">
        <h4>Blog Search</h4>
        <div class="input-group">
            <input type="text" class="form-control" />
            <span class="input-group-btn">

            </span>
        </div>
    </div>
</div>



